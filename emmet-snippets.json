{
    "NodeJS Main": {
        "prefix": "njs",
        "body": [
            "import express from 'express';",
            "import mongoose from 'mongoose';",
            "import 'dotenv/config.js';",
            "",
            "// Import Routes",
            "import ${route}Route from './routes/${route}.js';",
            "",
            "// Inits & Globals",
            "const app = express(); const port = 3000;",
            "",
            "// Connect to DB",
            "mongoose.connect(process.env.DB_CONNECTION,{useNewUrlParser: true,useUnifiedTopology: true,},() => console.log('» Connected to DB'));",
            "",
            "// Middlewares",
            "app.use(express.json());",
            "",
            "// Route Middlewares",
            "app.use('/${path}', ${route}Route);",
            "",
            "app.get('/', (req, res) => res.send('Hello World'));",
            "app.listen(port, () => console.log(`» Running at http://localhost:\\${port}`));",
        ],
        "description": "Create NodeJS Boilerplate"
    },
    "NodeJS Route": {
        "prefix": "nroute",
        "body": [
            "import express from 'express'; import ${Schema} from '../models/${Schema}.js';",
            "",
            "const router = express.Router();",
            "",
            "router.post('/${endpoint}', async (req, res) => {const ${schemaElement} = new ${Schema}({name: req.body.name,});",
            "",
            "try {const ${savedElement} = await ${schemaElement}.save(); res.send(${savedElement});} catch (error) {res.status(400).send(error);}",
            "});",
            "",
            "export default router;",
        ]
    },
    "NodeJS Schema": {
        "prefix": "nschema",
        "body": [
            "import mongoose from 'mongoose';",
            "const ${type}Schema = mongoose.Schema({name: {type: String, required: true, min: 6,},date: {type: Date,default: Date.now(),},});",
            "",
            "export default mongoose.model('${schemaName}', ${type}Schema);"
        ],
        "description": "Create NodeJS Mongoose Schema Boilerpalce"
    },
    "Console": {
        "prefix": "cl",
        "body": "console.${1|log,warn,error,trace,debug,timestamp|}($2);",
        "description": "Log output to console"
    }
}